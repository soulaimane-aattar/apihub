{
  "info": {
    "_postman_id": "2d19f6f0-4f24-4f77-9f07-4b9d98ff19f9",
    "name": "APIHub - API Tests",
    "description": "Collection to test APIHub user creation endpoint.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Users",
      "item": [
        {
          "name": "Create User - Success",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "  pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Response message is correct\", function () {",
                  "  const json = pm.response.json();",
                  "  pm.expect(json.message).to.eql(\"User created successfully\");",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{$randomEmail}}\",\n  \"password\": \"password123\",\n  \"metadata\": {\n    \"role\": \"member\",\n    \"signupSource\": \"postman\"\n  }\n}"
            },
            "url": "{{baseUrl}}/api/users",
            "description": "Creates a new user with a randomized email."
          },
          "response": []
        },
        {
          "name": "Create User - Invalid Email (400)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 400\", function () {",
                  "  pm.response.to.have.status(400);",
                  "});",
                  "",
                  "pm.test(\"Validation message is correct\", function () {",
                  "  const json = pm.response.json();",
                  "  pm.expect(json.message).to.eql(\"Invalid email format\");",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"invalid-email\",\n  \"password\": \"password123\"\n}"
            },
            "url": "{{baseUrl}}/api/users"
          },
          "response": []
        },
        {
          "name": "Create User - Short Password (400)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 400\", function () {",
                  "  pm.response.to.have.status(400);",
                  "});",
                  "",
                  "pm.test(\"Validation message is correct\", function () {",
                  "  const json = pm.response.json();",
                  "  pm.expect(json.message).to.eql(\"Password must be at least 8 characters\");",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"shortpass@example.com\",\n  \"password\": \"1234567\"\n}"
            },
            "url": "{{baseUrl}}/api/users"
          },
          "response": []
        },
        {
          "name": "Create User - Seed Duplicate Email",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (!pm.collectionVariables.get(\"duplicateEmail\")) {",
                  "  pm.collectionVariables.set(\"duplicateEmail\", `duplicate.${Date.now()}@example.com`);",
                  "}"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 201 or 409\", function () {",
                  "  pm.expect([201, 409]).to.include(pm.response.code);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{duplicateEmail}}\",\n  \"password\": \"password123\"\n}"
            },
            "url": "{{baseUrl}}/api/users",
            "description": "Creates a known user once so the next request can validate duplicate handling."
          },
          "response": []
        },
        {
          "name": "Create User - Duplicate Email (409)",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (!pm.collectionVariables.get(\"duplicateEmail\")) {",
                  "  pm.collectionVariables.set(\"duplicateEmail\", `duplicate.${Date.now()}@example.com`);",
                  "}"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 409\", function () {",
                  "  pm.response.to.have.status(409);",
                  "});",
                  "",
                  "pm.test(\"Duplicate message is correct\", function () {",
                  "  const json = pm.response.json();",
                  "  pm.expect(json.message).to.eql(\"Email already exists\");",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{duplicateEmail}}\",\n  \"password\": \"password123\"\n}"
            },
            "url": "{{baseUrl}}/api/users"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "duplicateEmail",
      "value": ""
